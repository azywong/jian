<% if logged_in? %>
  <h2>Tags You're Tracking</h2>
  <div class="bubble">
    <table>
      <% @user.tags.uniq.each do |tag| %>
        <tr class="<%= tag.name %>">
          <td><%= tag.name %></td>
          <td><a href="/tags/<%= tag.name %>">checkout tag</a></td>
          <td><form action="/user/<%= session[:id] %>/tag/<%= tag.name %>" method="post">
            <input name="_method" type="hidden" value="delete" />
            <input type="submit" value="delete" />
          </form></td>
        </tr>
      <% end %>
    </table>
  </div>
<% end %>